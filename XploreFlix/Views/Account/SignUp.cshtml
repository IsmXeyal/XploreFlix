<div class="section">
	<div class="container">
		<div class="row full-height justify-content-center">
			<div class="col-12 text-center align-self-center py-5">
				<div class="section pb-5 pt-5 pt-sm-2 text-center">
					<div class="card-3d-wrap mx-auto">
						<div class="card-3d-wrapper">
							<div class="card-back">
								<div class="center-wrap">
									<div class="section text-center">
										<h4 class="mb-3 pb-3">Sign Up</h4>
										@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
										{
											@if (TempData["Error"] != null)
											{
												<div class="alert alert-danger">
													<span><b>Sorry - </b>@TempData["Error"]</span>
												</div>
											}
											<div class="form-group">
												<input asp-for="FullName" class="form-style" placeholder="FullName">
												<i class="input-icon uil uil-user"></i>
												<span asp-validation-for="FullName" class="text-danger"></span>
											</div>
											<div class="form-group mt-2">
												<input asp-for="UserName" class="form-style" placeholder="UserName">
												<i class="input-icon uil uil-user"></i>
												<span asp-validation-for="UserName" class="text-danger"></span>
											</div>
											<div class="form-group mt-2">
												<input asp-for="Email" class="form-style" placeholder="Email">
												<i class="input-icon uil uil-at"></i>
												<span asp-validation-for="Email" class="text-danger"></span>
											</div>
											<div class="form-group mt-2">
												<input asp-for="Password" class="form-style" type="password" placeholder="Password">
												<i class="input-icon uil uil-lock-alt"></i>
												<span asp-validation-for="Password" class="text-danger"></span>
											</div>
											<div class="form-group mt-2">
												<input asp-for="ConfirmPassword" class="form-style" type="password" placeholder="Confirm Password">
												<i class="input-icon uil uil-lock-alt"></i>
												<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
											</div>
											<div class="group">
												<input type="submit" class="btn mt-4" value="Sign Up">
											</div>

											<div style="margin-top: 5px;">
												<a style="color: white;" asp-controller="Home" asp-action="Index">Back to Home Page</a>
											</div>
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
